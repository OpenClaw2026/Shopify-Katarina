{% if section.settings.display_three_block_banner %}
<div class="banner-home-top container">
  <div class="widget-title wow fadeIn animated" style="visibility: visible; animation-name: fadeIn;">   
     <fieldset class="box-title">
        <legend align="center">{% include 'multilang' with section.settings.title_block %}</legend>
     </fieldset>    
  </div>
  <ul class="row">
    {% for block in section.blocks %}
    <li class="col-xs-6 col-sm-4 wow fadeInUp" data-wow-delay="{{ settings.time_lazy_load }}ms">
        <a href="{{ block.settings.link }}">
            {% if block.settings.image != blank %}
            {%- assign img_url = block.settings.image | img_url: '2000x' -%}
             <img src="{{ img_url }}" alt="{{ block.settings.image.alt }}">
             {% else %} 	
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}     
        </a>
      <div class="block_content">
        <span class="title_vendor" style="{% if block.settings.three_block_heading_size != blank %}font-size: {{ block.settings.three_block_heading_size }}px;{% endif %}{% if block.settings.three_block_heading_color != blank %}color: {{ block.settings.three_block_heading_color }};{% endif %}">{% include 'multilang' with block.settings.three_block_heading_banner %}</span>
        <h4 style="{% if block.settings.three_block_title_size != blank %}font-size: {{ block.settings.three_block_title_size }}px;{% endif %}{% if block.settings.three_block_title_color != blank %}color: {{ block.settings.three_block_title_color }};{% endif %}">{% include 'multilang' with block.settings.three_block_title_banner %}</h4>
      	<a style="{% if block.settings.three_block_button_size != blank %}font-size: {{ block.settings.three_block_button_size }}px;{% endif %}{% if block.settings.three_block_button_color != blank %}color: {{ block.settings.three_block_button_color }};{% endif %}" href="{{ block.settings.link }}">
          {% include 'multilang' with block.settings.button_block_banner %}
          <i class="fa fa-angle-right"></i>
        </a>
      </div>
    </li>
    {% endfor %}
  </ul>
</div>
{% endif %}
{% schema %}
  {
    "name": "Six Banner Block",
    "class": "index-section index-section--flush",
    "max_blocks": 12,
    "settings": [
      {
        "type": "checkbox",
        "id": "display_three_block_banner",
        "label": "Enable",
        "default": true
      },
	  {
		"type" : "text",
		"id" : "title_block",
		"label" :"Title",
		"default" : "The shop"
      },
	  {
		"type" : "text",
		"id" : "border_bottom",
		"label" :"Bottom border",
		"default" : "3"
      },
	  {
		"type" : "color",
		"id" : "border_color",
		"label" : "Border color",
		"default" : "#eef2f2"
	  }

    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
			"info": "Width: 380px recommended"
          },
          {
            "type": "text",
            "id": "three_block_heading_banner",
            "label": "Heading Banner",
            "default": "Dresses"
          },
          {
            "type": "color",
            "id": "three_block_heading_color",
            "label": "Heading Banner Color",
            "default": "#333",
            "info": "Default Value: #333"
          },
          {
            "type": "text",
            "id": "three_block_heading_size",
            "label": "Heading Banner Size",
            "default": "12",
            "info": "Default Value: 12"
          },
		  {
            "type": "text",
            "id": "three_block_title_banner",
            "label": "Title Banner",
            "default": "Milancelos Dannis"
          },
		  {
            "type": "color",
            "id": "three_block_title_color",
            "label": "title Color",
            "default": "#000",
            "info": "Default Value: #000"
          },
          {
            "type": "text",
            "id": "three_block_title_size",
            "label": "Heading Banner Size",
            "default": "20",
            "info": "Default Value: 20"
          },
		  {
            "type": "text",
            "id": "button_block_banner",
            "label": "Button",
            "default": "Shop Now"
          },
		  {
            "type": "color",
            "id": "three_block_button_color",
            "label": "Button Color",
            "default": "#000",
            "info": "Default Value: #000"
          },
          {
            "type": "text",
            "id": "three_block_button_size",
            "label": "Heading Button Size",
            "default": "13",
            "info": "Default Value: 13"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Block Six Banner",
        "category": "Advanced layout",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}
<style>
  .banner-home-top li .block_content{
    border-bottom: {{section.settings.border_bottom}}px solid {{section.settings.border_color}};
  }
</style>