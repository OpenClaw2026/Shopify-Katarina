
  {% if section.blocks.size > 0 %}
    <div class="home-slideshow">
      <div class="variable-width" data-slick='{
      dots: true,
      slidesToScroll: 1,
      autoplay:true,
      adaptiveHeight: true,
      fade: {{ section.settings.slideshow_transition }},
      autoplaySpeed:{{ section.settings.slideshow_speed }}
	  }'>
        {% for block in section.blocks %}
          <div class="slick-list slideshow__slide--{{ block.id }} {% if block.type == 'video' %}slide_video{% endif %}">                
            {% if block.settings.image != blank %}
            <a class="hm_slide" href="{{ block.settings.link }}" >
              {%- assign img_url = block.settings.image | img_url: '2000x' -%}
              <img src="{{ img_url }}" data-url="{{ block.settings.link }}" class="slide-img hidden-xs" alt="{{ block.settings.image.alt }}" />
              
              {% if block.settings.image_mb != blank %}
              <img src="{{ block.settings.image_mb | img_url: '1024x1024' }}" data-url="{{ block.settings.link }}" class="slide-img visible-xs" alt="{{ block.settings.image.alt }}" />
              {% else %}
              <img src="{{ img_url }}" data-url="{{ block.settings.link }}" class="slide-img visible-xs" alt="{{ block.settings.image.alt }}" />
              {% endif %}
              {%comment%}
              <h2 class="slide-heading animated hidden-xs "
                    style="{% if block.settings.heading_size != blank %}
                           font-size: {{ block.settings.heading_size }}px;
                           {% endif %}
                           {% if block.settings.heading_color != blank %}
                           color:{{ block.settings.heading_color }};
                           {% endif %}">
                  {% include 'multilang' with block.settings.title  %}
                </h2>
              {%endcomment%}
            </a>
             {% else %}
              {% capture current %}{% cycle 1, 2 %}{% endcapture %}
              {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if block.type == 'video' %}
            
            <iframe width="100%" data-video-id="{{ block.settings.video_link }}" height="100%" src="https://www.youtube.com/embed/{{ block.settings.video_link }}?enablejsapi=1&rel=0&autoplay=0" frameborder="0" allowfullscreen="" volume="0"></iframe>
           	{% if section.settings.auto_playvideo %}
    			<script>
                  $('.variable-width').on('afterChange', function(event, slick, currentSlide){

                    if ($(this).find('.slide_video.slick-active').length > 0) {
                        $(this).find('.slide_video.slick-active').find('iframe')[0].contentWindow.postMessage('{'+'"event":"command",'+'"func":"playVideo"'+',"args":""}','*');
                        $(this).slick('slickPause');
                    } else if (!$(this).find('.slick-active').hasClass('.slide_video')) {
                      $(this).find('.slide_video').find('iframe')[0].contentWindow.postMessage('{'+'"event":"command",'+'"func":"pauseVideo"'+',"args":""}','*');
                      $(this).slick('slickPlay');
                    }
                  });
            	</script>
            {% endif %}
            {% endif %}
            {% if block.settings.title != blank or block.settings.subheading != blank %}         
              <div class="slider-content" 
                   style="
                          {% if block.settings.alignment == 'left' %}
                           left:10%;
                           right: initial!important;
                           {% endif %}
                          {% if block.settings.alignment == 'right' %}
                           right:10%;
                           left: initial!important;
                           {% endif %}
                          ">
                <span class="heading_top animated" style="{% if block.settings.heading_top_size != blank %}font-size:{{block.settings.heading_top_size}}px; {% endif %} {% if block.settings.heading_top_color %}color:{{block.settings.heading_top_color}}; {{block.settings.heading_top_color}};{% endif %}">
                  {% include 'multilang' with block.settings.heading_title %}
                </span>
                <h2 class="slide-heading animated "
                    style="{% if block.settings.heading_size != blank %}
                           font-size: {{ block.settings.heading_size }}px;
                           {% endif %}
                           {% if block.settings.heading_color != blank %}
                           color:{{ block.settings.heading_color }};
                           {% endif %}">
                  {% include 'multilang' with block.settings.title  %}
                </h2>
                <div class="slide-text animated hidden-xs"
                   style="letter-spacing: 2px;{% if block.settings.subheading_size != blank %}
                           font-size: {{ block.settings.subheading_size }}px;
                           {% endif %}
                           {% if block.settings.subheading_color != blank %}
                           color:{{ block.settings.subheading_color }};
                           {% endif %} ">
                  {% include 'multilang' with block.settings.subheading %}
                </div>
                
                <a style="{% if block.settings.background_button != blank  %}background:{{block.settings.background_button}};{%endif%}{% if block.settings.color_button != blank %} color:{{block.settings.color_button}};{% endif %}{% if block.settings.font_button != blank %}{{block.settings.font_button}};{% endif%} {% if block.settings.border_button != blank %} border:2px solid {{block.settings.border_button}} {% endif%} " href="{{ block.settings.link }}" class="slide-button animated btn ">                   
                  {% include 'multilang' with block.settings.button %}
          		</a>

              </div>
            
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}

