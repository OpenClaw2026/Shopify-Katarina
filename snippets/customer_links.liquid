{% if shop.customer_accounts_enabled %}
<ul class="customer-links">   
  {% if customer %}  
<!--   <li class="ct_register">
    <a href="/account" {% if settings.enable_multilang %}data-translate="customer.account.title"{% endif %}>{{ 'customer.account.title' | t }}</a>
  </li> -->
  <li class="ct_login">
    <label>Hello, {{customer.last_name}}</label>
    <a id="customer_logout_link" href="/account/logout" {% if settings.enable_multilang %}data-translate="layout.customer.log_out"{% endif %}>{{ 'layout.customer.log_out' | t }}</a>
  </li>
  {% else %}   
  <li class="dropdown ct_login">
    <label class="hl_wc">{{section.settings.text_hello}}</label>
    <a class="login" data-toggle="modal" data-target="#myModal" href="/account/login" {% if settings.enable_multilang %}data-translate="customer.login.sign_in"{% endif %}>{{ 'customer.login.sign_in' | t }}<i class="fa fa-angle-down ci-icon"></i></a>
      <div id="myModal" class="modal fade" role="dialog" aria-labelledby="dLabel">
        <div class="modal-dialog">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>           
          </div>
          <div class="modal-body">
           <h4 class="modal-title">Sign In</h4>
           <form class="form_login" accept-charset="UTF-8" action="/account/login" method="post">
             <input name="form_type" type="hidden" value="customer_login" />
             <input name="utf8" type="hidden" value="âœ“" />

             <label for="customer_email">Email Address<em>*</em></label>
             <input type="email" value="" name="customer[email]">

             <label for="customer_password">Password<em>*</em></label>
             <input type="password" value="" name="customer[password]" >

             <div class="action-btn">
               <input type="submit" class="btn" value="Login">
               <a href="/account/register" class="btn">Register</a>
               <a class="forgot_pw" href="/account/login#recover">Forgot your password?</a>
             </div>
          </form>
          </div>
        </div>
      </div>
  </li>
  {% if shop.customer_accounts_optional %}
<!--   <li class="ct_register">
    <a id="customer_register_link" href="/account/register" {% if settings.enable_multilang %}data-translate="layout.customer.create_account"{% endif %}>{{ 'layout.customer.create_account' | t }}</a>
  </li> -->
  {% endif %}
  {% endif %}
</ul>
{% endif %}