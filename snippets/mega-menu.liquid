{% if block_style == "style_1" %}
<div class="col-1{% if banner_first_style != blank or banner_second_style != blank %} col-xs-12 col-sm-9{% else %} col-xs-12{% endif %}{% if linklists[main_linklist].links.size == 3 %} mn-three-colum{% endif %}">
{% elsif block_style == "style_2" or block_style == "style_3" %}
<div class="col-1{% if banner_first_style != blank or banner_second_style != blank or banner_third_style != blank or featured_product != blank %} col-xs-12 col-sm-7{% else %} col-xs-12{% endif %}">
{% elsif block_style == "style_4" %}
  <div class="col-1 col-xs-12">
{% endif %}
  {% for l in linklists[main_linklist].links %}
  <div class="inner col-xs-12{% if banner_first_style != blank or banner_second_style != blank or banner_third_style or featured_product %} col-sm-4{% else %} col{% endif %}">
    <!-- Menu level 2-->
    {% assign menu_product = '' %}
    {% assign menu_product_handle = '' %}
    {% assign menu_img = '' %}
    {% assign menu_img_url = '' %}
    {% assign link_title_down = l.title | downcase %}
    {% if link_title_down == product_menu_title1 %}
      {% assign menu_product = product_menu_title1 %}
      {% assign menu_product_handle = product_menu_handle1 %}
    {% elsif link_title_down == product_menu_title2 %}
      {% assign menu_product = product_menu_title2 %}
      {% assign menu_product_handle = product_menu_handle2 %}
    {% endif %}
    {% if menu_product != '' and menu_product_handle != '' %}
    <div class="menu-pr-section">
    {% endif %}
    <a href="{{ l.url }}" class="current">
      {% include 'multilang' with l.title %}
      {% if block_style == "style_4" %}
        {% for collection in collections %}
          {% if collection.handle ==  l.handle %}
       		{% if collection.image.src != blank %}
          	{{ collection.image.src | collection_img_url: 'medium' | img_tag: collection_title }}
      		{% else %} 	
               {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          {% endif %}
        {% endfor %}
      {% endif %}
    </a>
    
    {% if menu_product != '' and menu_product_handle != '' %}
    {% include 'menu-product-item', product:all_products[menu_product_handle] %}
    {% endif %}
    
    {% if link_title_down == img_menu_title1 and menu_img_url1 != '' %}
    <div class="menu-image-dtl">
      <a href="{% if img_menu_link1 != '' %}{{ img_menu_link1 }}{% else %}javascript:void(0);{% endif %}">
        <img src="{{ menu_img_url1 | img_url:'master' }}">
      </a>
      {% if menu_img_heading1 != '' %}<a href="{% if img_menu_link1 != '' %}{{ img_menu_link1 }}{% else %}javascript:void(0);{% endif %}"><h2>{{ menu_img_heading1 }}</h2></a>{% endif %}
    </div>
    {% endif %}
    {% if menu_product != '' and menu_product_handle != '' %}
    </div>
    {% endif %}
    {% if link_title_down == img_menu_title2 and menu_img_url2 != '' %}
    <div class="menu-image-dtl">
      <a href="{% if img_menu_link2 != '' %}{{ img_menu_link2 }}{% else %}javascript:void(0);{% endif %}">
        <img src="{{ menu_img_url2 | img_url:'master' }}">
      </a>
      {% if menu_img_heading2 != '' %}<a href="{% if img_menu_link2 != '' %}{{ img_menu_link2 }}{% else %}javascript:void(0);{% endif %}"><h2>{{ menu_img_heading2 }}</h2></a>{% endif %}
    </div>
    {% endif %}
    
    {% if  linklists[l.handle] != empty %}
    
    <ul class="dropdown">
      {% for child_l in linklists[l.handle].links %}
      <!-- Menu level 3 -->
      <li{% if  linklists[child_l.handle] != empty %} class="mn-last-level"{% endif %}>
        <a href="{{ child_l.url }}" class="{% if linklists[child_l.handle].links.size > 0 %} nm-last-child{% endif %}{% if child_l.active %} current{% endif %}">
          {% include 'multilang' with child_l.title %}
        </a>
        {% if  linklists[child_l.handle] != empty %}
        <ul class="dropdown">
          {% for subchild_l in linklists[child_l.handle].links %}
          <!-- Menu level 4 -->
          <li>
            <a href="{{ subchild_l.url }}">
              {% include 'multilang' with subchild_l.title %}
            </a>
          </li>
          {% endfor %}
        </ul>
    {% endif %}
      </li>
      {% endfor %}
    </ul>
    {% endif %}
  </div>
  {% endfor %}
{% if block_style == "style_1" or block_style == "style_2" or block_style == "style_3" or block_style == "style_3" %}
</div>
{% endif %}
  
{% if block_style == "style_1" %}
  {% if banner_first_style != blank or banner_second_style != blank %}
  <div class="col-2 col-sm-3">
    {% if banner_first_style != blank %}
    <p class="first">
      <a href="{{ link_banner_first_style }}" title="">
        <img src="{{ banner_first_style | img_url : "2000x" }}" alt="" />
      </a>
    </p>
    {% endif %}
    {% if banner_second_style != blank %}
    <p class="second">
      <a href="{{ link_banner_second_style }}" title="">
        <img src="{{ banner_second_style | img_url : "2000x" }}" alt="" />
      </a>
    </p>
    {% endif %}
  </div>
  {% endif %}
{% elsif block_style == "style_2" %}
  {% if banner_first_style != blank or banner_second_style != blank or banner_third_style != blank %}
  <div class="col-2 col-sm-5">
    {% if banner_second_style != blank or banner_third_style != blank %}
    	<div class="col-left col-sm-6">
          	<a href="{{ link_banner_second_style }}" title="">
              <img src="{{ banner_second_style | img_url : "2000x" }}" alt="" />
          </a>
            <a href="{{ link_banner_thrid_style }}" title="">
              <img src="{{ banner_third_style | img_url : "2000x" }}" alt="" />
          </a>
    	</div>
    {% endif %}
    {% if banner_first_style != blank %}
    <div class="col-right col-sm-6">
      <a href="{{ link_banner_first_style }}" title="">
      <img src="{{ banner_first_style | img_url : "2000x" }}" alt="" />
      </a>
    </div>
    {% endif %}    
    
  </div>
  {% endif %}
{% elsif block_style == "style_3" %}
  {% if banner_first_style != blank or featured_product != blank %}
  <div class="col-2 col-sm-5">
    <div class="row">
      {% if product.title.size > 0 %}
      <div class="col-xs-12 col-sm-6">
        <div class="widget-featured-product{% unless product.available %} product-price--sold-out grid-view-item--sold-out{% endunless %}">
          {% if title_featured_product != blank %}
          <h3 class="title">{% include 'multilang' with title_featured_product %}</h3>
          {% endif %}
          <a class="img" href="{{ product.url | within: collection }}">
            
            {{ product.featured_image.src | img_url: width_product, crop: 'top' | img_tag }}
          
          </a>
          <div class="grid-view-item_title"><a class="grid-view-item__link" href="{{ product.url | within: collection }}">{{ product.title }}</a></div>
          <div class="price-box">
            {% if on_sale %}
            <p class="sale">
              <span class="old-price"> {{ product.compare_at_price_min | money }}</span>
              <span class="special-price">{% if product.price_varies %}{% include 'varies_from' %}{% endif %}{{ product.price_min | money }}</span>
            </p>
            {% else %}
            <p class="regular-product">
            {% comment %}
              You can show a leading 'from' or 'up to' by checking 'product.price_varies'
              if your variants have different prices.
            {% endcomment %}
              <span>{% if product.price_varies %}{% include 'varies_from' %}{% endif %}{{ product.price_min | money }}</span>
            </p>
            {% endif %}
          </div>
        </div>
      </div>
      {% endif %}
      {% if banner_first_style != blank %}
      <div class="col-xs-12 col-sm-6">
        <a href="{{ link_banner_first_style }}" title="">
        <img src="{{ banner_first_style | img_url : "2000x" }}" alt="" />
        </a>
      </div>
      {% endif %}
    </div>
  </div>
  {% endif %}
{% endif %}
