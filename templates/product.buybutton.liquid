              <div class="short-description lang1">{{ product.description | split: '[lang2]' | first | strip_html | truncatewords: 26 }}</div>              
              <div class="short-description lang2">{{ product.description | split: '[lang2]' | last | strip_html | truncatewords: 26 }}</div>
              {% else %}
              <div class="short-description">{{ product.description | split: '[lang2]' | first | strip_html | truncatewords: 26 }}</div>              
